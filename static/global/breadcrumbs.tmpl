{{define "breadcrumbs"}}
	{{if .HasParents}}
<style type="text/css">
	.breadcrumb {
			padding: 0 .5rem;
	}

	.breadcrumb ul {
			display: flex;
			flex-wrap: wrap;
			list-style: none;
			margin: 0;
			padding: 0;
	}
			
	.breadcrumb li:not(:last-child)::after {
			display: inline-block;
			margin: 0 .25rem;
			content: "/";
	}
</style>

<nav aria-label="Breadcrumb" class="breadcrumb">
	<ul>
	{{range $crumb := .Breadcrumbs}}
		<li><a href="{{.href}}">{{.text}}</a></li>
	{{end}}
	</ul>
</nav>
	{{end}}
{{end}}

{{define "nav"}}
	{{if .HasChildren}}
<style type="text/css">
	.sidebar {
			padding: 0 .5rem;
	}

</style>

<div class="filterable-list" x-data="{
	open: false,
	toggle() { this.open = ! this.open }
}">
	<button @click="toggle()">Menu</button>
	<nav class="sidebar" x-show="open" @click.outside="open = false">

<div class="wrapper" x-data="{
  search: '',
  show_item(el) {
    return this.search === '' ||
		el.textContent.toLowerCase().includes(this.search)
  }
}">
	<input class="filterable-list-input" type="search" placeholder="Filter list..." x-model="search">
	 <div>
    <p>Search Input: <span x-text="search"></span></p>
  </div>
	{{range .Nav}}
	<div x-show="show_item($el)" style="padding-left:{{.depth}}rem;" class="dir">
		 &#x1F4C2; <a href="{{.href}}">{{.text}}</a>
	</div>
	{{range .files}}
		<div x-show="show_item($el)" style="padding-left:{{.depth}}rem;" class="file">
			&#8627; <a href="{{.href}}">{{.text}}</a>
		</div>
	{{end}}
{{end}}
</div>
</nav>
</div>
</div>
<script>
</script>
	{{end}}
{{end}}

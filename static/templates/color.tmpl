{{define "color"}}
<style>
:root {
	{{with .Bg}}--bg: {{.}};{{end}}
	{{with .Fg}}--fg: {{.}};{{end}}
	{{with .White}}--white: {{.}};{{end}}
	{{with .Black}}--black: {{.}};{{end}}
	{{with .Grey}}--grey: {{.}};{{end}}
	{{with .Yellow}}--yellow: {{.}};{{end}}
	{{with .Red}}--red: {{.}};{{end}}
	{{with .Pink}}--pink: {{.}};{{end}}
	{{with .Cyan}}--cyan: {{.}};{{end}}
	{{with .Blue}}--blue: {{.}};{{end}}
	{{with .Green}}--green: {{.}};{{end}}
	{{with .Purple}}--purple: {{.}};{{end}}
	--darken: brightness(90%);
}
</style>
{{end}}
